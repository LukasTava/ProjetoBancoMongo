<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Editar</title>
</head>
<body>

<h2>Editar Registro</h2>
  <% data.forEach(function(details) { %>
    <form action="/livro/<%= details._id %>" method="POST">
      <input type="text" value="<%= details.titulo %>" name="titulo">
      <input type="text" value="<%= details.editora %>" name="editora">
      <br />
      <button><a href="/show">Todos</a></button>
      <button type="submit">Editar</button>
    </form>
  <% }) %>

</body>
</html>